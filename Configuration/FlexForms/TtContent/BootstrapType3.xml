        <sLINK1>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Link 1</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <field index="link1_text">
                        <value index="TCEforms">
                            <label>Text</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>255</max>
                                <eval>trim</eval>
